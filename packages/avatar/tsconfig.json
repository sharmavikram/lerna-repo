{
    "compilerOptions": {
      "baseUrl": ".",
      "outDir": "./dist",
      "module": "esnext",
      "target": "es6",
      "lib": ["es6", "dom"],
      "dist": ["es6", "dom"],
      "sourceMap": true,
      "jsx": "react",
      "skipLibCheck": true,
      "moduleResolution": "node",
      "rootDir": "src",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "importHelpers": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": false,
      "declaration": true,
      "declarationMap": true,
      "allowSyntheticDefaultImports": true
    },
    "exclude": [
      "lib",
      "dist",
      "node_modules",
      "build",
      "scripts",
      "acceptance-tests",
      "webpack",
      "jest"
    ]
  }
  